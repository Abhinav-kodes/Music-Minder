{
  "name": "music-minder",
  "version": "1.0.0",
  "description": "Adaptive volume control for background music - automatically reduces music volume when videos play",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "clean": "rm -rf dist/",
    "package": "web-ext build --source-dir=. --artifacts-dir=web-ext-artifacts",
    "start": "web-ext run --source-dir=dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Abhinav-kodes/Music-Minder.git"
  },
  "keywords": [
    "firefox",
    "extension",
    "audio",
    "volume",
    "music",
    "adaptive"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Abhinav-kodes/Music-Minder/issues"
  },
  "homepage": "https://github.com/Abhinav-kodes/Music-Minder#readme",
  "devDependencies": {
    "@types/firefox-webext-browser": "^120.0.4",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^9.29.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "web-ext": "^8.7.1",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
